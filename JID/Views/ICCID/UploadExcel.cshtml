
@{
    ViewData["Title"] = "UploadExcel";
}

<h1>ICCID Automation</h1>

<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
    <div class="card-deck">

        <div class="card">
            <div class="card-header bg-dark text-white ">
                Upload do arquivo.
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="UploadExcel" asp-controller="ICCID" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label>Quantidade de iccids</label>
                        <input type="number" id="qtdRow" class="form-control" name="qtdRows">
                        <small id="qtdRow" class="form-text text-muted">Informe a quantidade de iccids que deseja validar.</small>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" id="file" name="file">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info" id="uploadButton"><i class="fas fa-save"></i> Enviar</button> | <a href="@Url.Action("Index","Home")" class="btn btn-secondary"><i class="fas fa-backward"></i> Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>